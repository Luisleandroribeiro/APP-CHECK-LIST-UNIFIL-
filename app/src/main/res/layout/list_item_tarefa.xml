<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:layoutDirection="rtl">

        <!-- Lado Esquerdo (Cor Verde) -->
        <View
            android:id="@+id/leftDivider"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="#4FA983"/>

        <!-- Conteúdo da Tarefa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/leftDivider"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Título da Tarefa -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título da Tarefa"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Outros detalhes da Tarefa -->
            <!-- Adicione outros elementos conforme necessário -->

        </LinearLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
